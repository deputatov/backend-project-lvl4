extends ../layouts/application.pug

block header
  = t('views.tasks.update.title')

block content
  +formFor()(action=`/tasks/${task.id}/authorId/${task.authorId}/` method='post')
    +input(task, 'name', errors)(type="text", autofocus)
    +textarea(task, 'description', 'Описание')(type="text")
    +select(task, 'statusId', 'Статус', errors)(type="number")
    +select(task, 'executorId', 'Исполнитель', errors)(type="number")
    +select(task, 'labels', 'Метки', errors)(multiple)
    input(name='_method', type='hidden', value='patch')
    +submit(task)(value=t('views.tasks.update.submit'))