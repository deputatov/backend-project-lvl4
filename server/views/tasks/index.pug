extends ../layouts/application.pug

block content
  a(class='nav-link' href=route('tasks#new'))= t('views.tasks.new.create')
  .jumbotron.p-2
    +formFor()(action=route('tasks#index') method='get').form-inline
      +selectFilter(filters, 'statusId', 'Статус').ml-2.mr-3
      +selectFilter(filters, 'executorId', 'Исполнитель').ml-2.mr-3
      +selectFilter(filters, 'labelId', 'Меткa').ml-2.mr-3
      +checkbox(filters, 'isCreatorUser', 'Только мои задачи')
      +submit()(value=t('views.tasks.filter.submit')).ml-3
  table.table.table-striped
    thead
      tr
        th=t('views.tasks.id')
        th=t('views.tasks.name')
        th=t('views.tasks.statuses')
        th=t('views.tasks.creators')
        th=t('views.tasks.executors')
        th=t('views.tasks.createdAt')
        th
    tbody
      each task in tasks
        tr
          td=task.id
          td
            a(href=route('tasks#show', { id: task.id }))=task.name
          td=task.statuses.name
          td=task.creators.fullName
          td=task.executors.fullName
          td=formatDate(task.createdAt)
          td
            a(href=route('tasks#edit', { id: task.id }))=t('views.tasks.update.submit')
            +buttonTo(route('tasks#destroy', { id: task.id }), 'delete')(class='btn btn-link', value=t('views.tasks.delete.submit'))