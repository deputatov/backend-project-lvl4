extends ../layouts/application.pug

block header
  = t('views.users.update.title')

block content
  +formFor()(action=route('users#update', { id: user.id }) method='post')
    +input(user, 'firstName', t('views.users.firstName'), errors)(type='text')
    +input(user, 'lastName', t('views.users.lastName'), errors)(type='text')
    +input(user, 'email', t('views.users.email'), errors)(type='email')
    +input(user, 'password', t('views.users.password'), errors)(type='password')
    input(name='_method', type='hidden' value='patch')
    +submit(user)(value=t('views.users.update.submit'))