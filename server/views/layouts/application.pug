include ../mixins/forms.pug

doctype html
html(lang="en")
  head
    title= Title
    script(src='/assets/main.js')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-3
      a.navbar-brand(href=route('root'))= t('menu.taskManager')
      button.navbar-toggler(data-toggle="collapse" data-target="#navbarSupportedContent")
        span.navbar-toggler-icon
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href=route('users'))= t('menu.users')
        ul.navbar-nav
          if isSignedIn()
            li.nav-item
              form(action=route('session')  method='post')
                input(name="_method" type="hidden" value="delete")
                input.btn.nav-link(type='submit' value=t('controls.signOut'))
          else
            li.nav-item
              a.nav-link(href=route('newSession'))= t('controls.signIn')
            li.nav-item
              a.nav-link(href=route('newUser'))= t('controls.signUp')
    .container
      // - const isFlash = _.get(flash, 'info', false);
      // if isFlash
      //   .alert.alert-info.m-3= flash.info.join(' ')
      block content
