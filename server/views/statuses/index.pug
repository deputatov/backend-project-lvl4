extends ../layouts/application.pug

block content
  a(class='nav-link' href=route('statuses#new'))= t('views.statuses.new.create')
  table.table.table-striped
    thead
      tr
        th=t('views.statuses.id')
        th=t('views.statuses.name')
        th=t('views.statuses.createdAt')
        th
    tbody
      each status in statuses
        tr
          td=status.id
          td=status.name
          td=formatDate(status.createdAt)
          td
            a(href=route('statuses#edit', { id: status.id }))=t('views.statuses.update.submit')
            +buttonTo(route('statuses#destroy', { id: status.id }), 'delete')(class='btn btn-link', value=t('views.statuses.delete.submit'))
